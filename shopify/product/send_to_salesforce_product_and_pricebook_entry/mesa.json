{
    "key": "shopify/order/send_to_salesforce_opportunity_and_opportunity_products_1",
    "name": "Send a new Shopify Product to a Salesforce Product and Pricebook entry",
    "version": "1.0.0",
    "description": "Set your business up for success by allowing Shopify and Salesforce to share details that are often tedious to manually transfer across platforms. This template sends Shopify products to Salesforce products and Pricebook entries each time the product is created or updated. You can now have all the key information of your products neatly organized to ensure that they are up to date, available, and appropriately priced for your customers.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "",
    "destination": "",
    "seconds": 60,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "product",
                "action": "created",
                "name": "Product Created",
                "key": "shopify",
                "metadata": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify.variants[]}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "custom",
                "name": "Custom Code",
                "key": "custom",
                "metadata": {
                    "description": "Combine the product title with the variant title if the product has variants. Otherwise, only use the product title.",
                    "script": "custom.js"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "salesforce",
                "entity": "product",
                "action": "create",
                "name": "Create Product",
                "key": "salesforce",
                "metadata": {
                    "entity_name": "Product2",
                    "method": "POST",
                    "body": {
                        "Name": "{{custom.current_item.combined_title}}",
                        "StockKeepingUnit": "{{loop.current_item.sku}}",
                        "Description": "{{loop.complete.body_html}}",
                        "ProductCode": "{{loop.current_item.barcode}}",
                        "ExternalID": "{{loop.product_id}}",
                        "IsActive": "true",
                        "Shopify_Variant_ID__c": "{{loop.current_item.id}}"
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "type": "object",
                        "fields": [
                            {
                                "key": "Name",
                                "label": "Product Name",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "ProductCode",
                                "label": "Product Code",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "Description",
                                "label": "Product Description",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "IsActive",
                                "label": "Active",
                                "type": "checkbox",
                                "source": "salesforce"
                            },
                            {
                                "key": "Family",
                                "label": "Product Family",
                                "type": "select",
                                "source": "salesforce",
                                "options": [
                                    {
                                        "label": "None",
                                        "value": "None"
                                    }
                                ]
                            },
                            {
                                "key": "ExternalDataSourceId",
                                "label": "External Data Source ID",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "ExternalId",
                                "label": "External ID",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "DisplayUrl",
                                "label": "Display URL",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "QuantityUnitOfMeasure",
                                "label": "Quantity Unit Of Measure",
                                "type": "select",
                                "source": "salesforce",
                                "options": [
                                    {
                                        "label": "Each",
                                        "value": "Each"
                                    }
                                ]
                            },
                            {
                                "key": "StockKeepingUnit",
                                "label": "Product SKU",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "Shopify_Variant_ID__c",
                                "label": "Shopify Variant ID",
                                "type": "text",
                                "source": "salesforce"
                            }
                        ]
                    }
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "salesforce",
                "entity": "pricebook_entry",
                "action": "query",
                "name": "Query Pricebook Entry",
                "key": "salesforce_2",
                "metadata": {
                    "entity_name": "PricebookEntry",
                    "method": "QUERY",
                    "salesforce_query": "SELECT Id FROM PricebookEntry WHERE Product2Id='{{salesforce_1.id}}'"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "salesforce",
                "entity": "pricebook_entry",
                "action": "create",
                "name": "Create Pricebook Entry",
                "key": "salesforce_1",
                "metadata": {
                    "entity_name": "PricebookEntry",
                    "method": "POST",
                    "body": {
                        "Product2Id": "{{salesforce.id}}",
                        "Pricebook2Id": "01s2E000002pddCQAQ",
                        "UnitPrice": "{{loop.current_item.price}}",
                        "IsActive": "true"
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "type": "object",
                        "fields": [
                            {
                                "key": "Pricebook2Id",
                                "label": "Price Book ID",
                                "type": "typeahead",
                                "source": "salesforce"
                            },
                            {
                                "key": "Product2Id",
                                "label": "Product ID",
                                "type": "typeahead",
                                "source": "salesforce"
                            },
                            {
                                "key": "UnitPrice",
                                "label": "List Price",
                                "type": "text",
                                "source": "salesforce"
                            },
                            {
                                "key": "IsActive",
                                "label": "Active",
                                "type": "checkbox",
                                "source": "salesforce"
                            },
                            {
                                "key": "UseStandardPrice",
                                "label": "Use Standard Price",
                                "type": "checkbox",
                                "source": "salesforce"
                            }
                        ]
                    }
                ],
                "on_error": "default",
                "weight": 4
            }
        ],
        "storage": []
    }
}