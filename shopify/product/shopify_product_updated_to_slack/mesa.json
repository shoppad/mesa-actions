{
  "key": "shopify_product_inventory_updated_to_slack",
  "name": "Send a Slack message when a Shopify product's inventory runs low",
  "version": "1.0.0",
  "description": "",
  "video": "",
  "readme": "",
  "tags": [],
  "source": "shopify_webhook",
  "destination": "slack",
  "enabled": false,
  "logging": false,
  "debug": false,
  "config": {
    "inputs": [
      {
        "schema": 3,
        "trigger_type": "input",
        "type": "shopify_webhook",
        "entity": "product",
        "action": "updated",
        "name": "Shopify Product Updated",
        "key": "shopify_product",
        "metadata": [],
        "weight": 0
      }
    ],
    "outputs": [
      {
        "schema": 2,
        "trigger_type": "output",
        "type": "iterator",
        "name": "Iterator",
        "key": "iterator",
        "metadata": {
          "key": "{{shopify_product.variants[]}}"
        },
        "local_fields": [],
        "weight": 0
      },
      {
        "schema": 2,
        "trigger_type": "output",
        "type": "filter",
        "name": "Filter",
        "key": "filter",
        "metadata": {
          "comparison": "less than equal",
          "b": "3",
          "a": "{{iterator.inventory_quantity}}"
        },
        "local_fields": [],
        "weight": 1
      },
      {
        "schema": 2,
        "trigger_type": "output",
        "type": "slack",
        "name": "Slack",
        "key": "slack",
        "metadata": {
          "message": "{{shopify_product.title}} is running low on inventory. \nCurrent inventory quantity: {{filter.inventory_quantity}}."
        },
        "local_fields": [],
        "weight": 2
      }
    ],
    "storage": []
  }
}
