{
  "key": "shoppad/mesa-templates/shopify/product/send-to-another-store",
  "name": "Send Product To Another Store",
  "version": "1.0.0",
  "description": "Send product from Shopify to another store when product is created, updated or deleted.",
  "tags": ["Product"],
  "source": "shopify",
  "destination": "shopify",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Product Create Webhook",
        "key": "in-shopify-product-create",
        "script": "in-shopify-product-create.js",
        "topic": "products/create"
      },
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Product Update Webhook",
        "key": "in-shopify-product-update",
        "script": "in-shopify-product-update.js",
        "topic": "products/update"
      },
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Product Delete Webhook",
        "key": "in-shopify-product-delete",
        "script": "in-shopify-product-delete.js",
        "topic": "products/delete"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Create Shopify Product",
        "key": "out-create-shopify-product",
        "script": "out-create-shopify-product.js"
      },
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Update Shopify Product",
        "key": "out-update-shopify-product",
        "script": "out-update-shopify-product.js"
      },
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Remove Shopify Product",
        "key": "out-delete-shopify-product",
        "script": "out-delete-shopify-product.js"
      }
    ],
    "secrets": [
      {
        "key": "store-password"
      }
    ],
    "storage": [
      {
        "key": "store-host"
      },
      {
        "key": "store-key"
      },
      {
        "key": "product-map.json",
        "value": "{}"
      }
    ]
  }
}