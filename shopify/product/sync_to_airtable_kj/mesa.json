{
    "key": "shopify/product/sync_to_airtable_kj",
    "name": "Sync Shopify products to Airtable",
    "version": "1.0.0",
    "description": "Syncing your Shopify products with Airtable provides various benefits such as flexible inventory management and customized reporting. With the use of this template, you can ensure that the details of each order are always reflected in Airtable whenever an order is placed or updated. This will save you time, as you won't have to copy and paste data from one platform to another manually.",
    "seconds": 300,
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "product",
                "action": "updated",
                "name": "Product Updated",
                "key": "shopify",
                "operation_id": "products_update",
                "metadata": [],
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "airtable",
                "entity": "record",
                "action": "list",
                "name": "Get Products",
                "version": "v2",
                "key": "airtable",
                "operation_id": "list",
                "metadata": {
                    "api_endpoint": "get /{base}/{table}",
                    "path": {
                        "base": "{{ template | label: 'Copy and select your Airtable base', description: 'You'll need a base with both a Products and a Variants table. To save time you can use the base we set up. Click on the  <a href=\"https://airtable.com/appOPGLNn2a53I7Vu/shr8h1sX5iTlMWdRI/tbllZEf9JLZ8t1l8t/viwa1G966zx7Xz99B?blocks=hide\" target=_blank >Airtable template</a> and make a copy. In the dropdown below, select the copied base. Erase the example data and begin syncing your data.' }}",
                        "table": "Products"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "path",
                    "path.base",
                    "path.table"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "transform",
                "entity": "mapping",
                "name": "Product Fields",
                "key": "transform",
                "operation_id": "mapping",
                "metadata": {
                    "mapping": [
                        {
                            "destination": "Product ID",
                            "source": "{{shopify.id}}"
                        },
                        {
                            "destination": "Title",
                            "source": "{{shopify.title}}"
                        },
                        {
                            "destination": "Images",
                            "source": "{{shopify.image.src}}"
                        }
                    ]
                },
                "local_fields": [
                    {
                        "key": "mapping",
                        "type": "mapping",
                        "tokens": "brackets",
                        "location": "required"
                    }
                ],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "custom",
                "name": "Upsert Product To Airtable",
                "key": "airtable_product_upsert",
                "metadata": {
                    "field_name": "Product ID",
                    "field_value": "{{shopify.id}}",
                    "script": "airtable_product_upsert.js",
                    "description": " ",
                    "table_name": "Products"
                },
                "local_fields": [
                    {
                        "key": "table_name",
                        "label": "Table Name",
                        "type": "string",
                        "tokens": false,
                        "required": true,
                        "default": "Products",
                        "location": "required"
                    },
                    {
                        "key": "field_name",
                        "label": "ID Field",
                        "type": "string",
                        "tokens": false,
                        "required": true,
                        "default": "Product ID",
                        "location": "required"
                    },
                    {
                        "key": "field_value",
                        "label": "ID Value",
                        "type": "string",
                        "required": true,
                        "default": "{{shopify.id}}",
                        "location": "required"
                    }
                ],
                "selected_fields": [
                    "script"
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product_variant",
                "action": "list",
                "name": "Get List of Product Variants",
                "key": "shopify_1",
                "operation_id": "get_products_product_id_variants",
                "metadata": {
                    "api_endpoint": "get admin/products/{{product_id}}/variants.json",
                    "product_id": "{{shopify.id}}"
                },
                "local_fields": [],
                "selected_fields": [
                    "product_id"
                ],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v2",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{ shopify_1 }}",
                    "filter": {
                        "comparison": "equals"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "key"
                ],
                "on_error": "default",
                "weight": 4
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "transform",
                "entity": "mapping",
                "name": "Variant Fields",
                "key": "transform_1",
                "operation_id": "mapping",
                "metadata": {
                    "mapping": [
                        {
                            "destination": "SKU",
                            "source": "{{loop.sku}}"
                        },
                        {
                            "destination": "Title",
                            "source": "{{loop.title}}"
                        },
                        {
                            "destination": "Variant ID",
                            "source": "{{loop.id}}"
                        },
                        {
                            "destination": "Product",
                            "source": "{{custom.id }}"
                        },
                        {
                            "destination": "Price",
                            "source": "{{loop.price}}"
                        },
                        {
                            "destination": "Compare At",
                            "source": "{{loop.compare_at_price}}"
                        }
                    ]
                },
                "local_fields": [
                    {
                        "key": "mapping",
                        "type": "mapping",
                        "tokens": "brackets",
                        "location": "required"
                    }
                ],
                "selected_fields": [],
                "on_error": "default",
                "weight": 5
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "custom",
                "name": "Upsert Variant",
                "key": "airtable_variant_upsert",
                "metadata": {
                    "description": "Use the airtable product id when updating the variant",
                    "script": "airtable_variant_upsert.js",
                    "field_name": "Variant ID",
                    "field_value": "{{loop.id}}",
                    "table_name": "Variants"
                },
                "local_fields": [
                    {
                        "key": "table_name",
                        "label": "Table Name",
                        "type": "string",
                        "tokens": false,
                        "required": true,
                        "default": "Variants",
                        "location": "required"
                    },
                    {
                        "key": "field_name",
                        "label": "ID Field",
                        "type": "string",
                        "tokens": false,
                        "required": true,
                        "default": "Variant ID",
                        "location": "required"
                    },
                    {
                        "key": "field_value",
                        "label": "ID Value",
                        "type": "string",
                        "required": true,
                        "default": "{{loop.id}}",
                        "location": "required"
                    }
                ],
                "selected_fields": [
                    "description"
                ],
                "on_error": "default",
                "weight": 6
            }
        ]
    }
}