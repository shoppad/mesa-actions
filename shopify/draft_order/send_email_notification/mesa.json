{
    "key": "shopify/draft_order/send_email_notification",
    "name": "Receive an email when a draft order is created",
    "version": "1.0.0",
    "description": "Being notified about any activity on your Shopify store is helpful for a store owner who may not always have time to monitor the store. This template sends an email notification when a Shopify draft order is created. Store owners will receive an email with a link to the recently created Shopify draft order.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify",
    "destination": "email",
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "draft_order",
                "action": "created",
                "name": "Draft Order Created",
                "key": "shopify_draft_order",
                "metadata": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Get List Shop",
                "key": "shopify_shop",
                "metadata": {
                    "site": "current"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "email",
                "is_premium": true,
                "name": "Email",
                "key": "email",
                "metadata": {
                    "subject": "{{shopify_shop.name}} New draft order has been created.",
                    "message": "New draft order has been created. See: https://{{shopify_shop.myshopify_domain}}/admin/draft_orders/{{shopify_draft_order.id}}",
                    "to": "{{shopify_shop.email}}"
                },
                "local_fields": [],
                "weight": 1
            }
        ],
        "storage": []
    }
}