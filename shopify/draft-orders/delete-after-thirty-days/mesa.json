{
  "name": "Delete Shopify Draft Orders After Thirty Days",
  "version": "1.0.0",
  "description": "Deletes Shopify draft orders after they've been around for 30 days (runs twice a day).",
  "url": "shoppad/mesa-templates/shopify/draft-orders/delete-after-thirty-days",
  "documentation": "https://github.com/shoppad/mesa-templates/blob/master/shopify/draft-orders/delete-after-thirty-days/README.md",
  "tags": ["draft-orders", "shopify"],
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "enabled": true,
        "type": "shopify_webhook",
        "name": "Delete Draft Order After Thirty Days",
        "key": "in-delete-draft-order-after-thirty-days",
        "trigger_name": "In: Delete Draft Order After Thirty Days",
        "script": "shopify/draft-orders/delete-after-thirty-days/input.js",
        "topic": "draft_orders/create"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "enabled": true,
        "type": "virtual_output",
        "name": "Delete Draft Order After Thirty Days VO",
        "key": "out-delete-draft-order-after-thirty-days-vo",
        "trigger_name": "Out: Delete Draft Order After Thirty Days VO",
        "schedule": "0 */12 * * *",
        "script": "shopify/draft-orders/delete-after-thirty-days/output.js",
        "custom_connection": true,
        "parameters": "created_at_max={date:30 days ago}"
      }
    ]
  },
  "files": [
    "shopify/draft-orders/delete-after-thirty-days/input.js",
    "shopify/draft-orders/delete-after-thirty-days/output.js"
  ]
}