{
  "key": "shoppad/mesa-templates/shopify/draft-order/send-email-notification",
  "name": "Send Email Notification When Draft Order Is Created",
  "version": "1.0.0",
  "description": "Send email notification from Shopify draft order when draft order is created.",
  "tags": ["draft-order"],
  "source": "shopify",
  "destination": "notification",
  "enabled": true,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Draft Order Created",
        "key": "in-shopify-draft-order-created",
        "script": "in-shopify-draft-order-created.js",
        "topic": "draft_orders/create"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Send Email Notification",
        "key": "out-send-email-notification",
        "script": "out-send-email-notification.js"
      }
    ]
  }
}