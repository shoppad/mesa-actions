{
  "key": "shoppad/mesa-templates/shopify/draft-order/send-to-hubspot-deal",
  "name": "Send Draft Order To Hubspot Deal",
  "version": "1.0.0",
  "description": "Send draft order from Shopify to HubSpot Deal when draft order is created.",
  "video": "",
  "readme": "",
  "tags": ["Draft-Order"],
  "source": "shopify",
  "destination": "hubspot",
  "enabled": false,
  "logging": false,
  "debug": false,
  "config": {
      "inputs": [
          {
              "trigger_type": "input",
              "type": "shopify_webhook",
              "entity": "draft_orders",
              "action": "create",
              "name": "Shopify Draft Order Created",
              "key": "shopify_draft_order",
              "metadata": {
                  "topic": "draft_orders\/create"
              },
              "local_fields": null,
              "weight": 0
          }
      ],
      "outputs": [
          {
              "trigger_type": "output",
              "type": "transform",
              "entity": "mapping",
              "action": null,
              "name": "Mapping to Hubspot Create Deal",
              "key": "mappingtohubspotcreatedeal",
              "metadata": {
                  "script": "transform.js",
                  "mapping": [
                      {
                          "destination": "DealName",
                          "source": "{{shopify_draft_order.customer.first_name}} {{shopify_draft_order.customer.last_name}} {{shopify_draft_order.name}} Deal"
                      },
                      {
                          "destination": "DealType",
                          "source": "New"
                      },
                      {
                          "destination": "Pipeline",
                          "source": "default"
                      },
                      {
                          "destination": "DealStage",
                          "source": "appointmentscheduled"
                      },
                      {
                          "destination": "Amount",
                          "source": "{{shopify_draft_order.total_price}}"
                      },
                      {
                          "destination": "CloseDate",
                          "source": "{{shopify_draft_order.created_at}}"
                      }
                  ]
              },
              "local_fields": [
                  {
                      "key": "mapping",
                      "type": "mapping",
                      "tokens": "brackets"
                  }
              ],
              "weight": 0
          },
          {
              "trigger_type": "output",
              "type": "hubspot",
              "entity": "deal",
              "action": "create",
              "name": "Hubspot Create Deal",
              "key": "hubspot_deal",
              "metadata": {
                  "method": "POST",
                  "path": "\/deals\/v1\/deal"
              },
              "local_fields": null,
              "weight": 1
          }
      ],
      "storage": []
  }
}