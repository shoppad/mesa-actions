{
    "key": "shopify_order_send_high_risk_orders_to_sms",
    "name": "Send an SMS Message if a Customer Places a Fraudulent Order",
    "version": "1.0.0",
    "description": "",
    "video": "",
    "tags": [],
    "source": "shopify",
    "destination": "slack",
    "seconds": 0,
    "enabled": false,
    "logging": false,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Shopify Order Created",
                "key": "shopify_order",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order_risk",
                "action": "list",
                "name": "Shopify Get List Order Risk",
                "key": "shopify_order_risk",
                "metadata": {
                    "order_id": "{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify_order_risk.risks}}"
                },
                "local_fields": [],
                "weight": 1
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{loop.recommendation}}",
                    "comparison": "equals",
                    "b": "cancel"
                },
                "local_fields": [],
                "weight": 3
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Shopify Retrieve Shop",
                "key": "shopify_shop",
                "metadata": [],
                "local_fields": [],
                "weight": 4
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "sms",
                "is_premium": true,
                "entity": "message",
                "action": "send",
                "name": "SMS Send Message",
                "key": "sms_message",
                "metadata": {
                    "to": "{{shopify_shop.phone}}",
                    "message": "Potentially fraudulent order {{shopify_order.name}}\n\nView order: https:\/\/{{shopify_shop.myshopify_domain}}\/admin\/orders\/{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 5
            }
        ],
        "storage": []
    }
}