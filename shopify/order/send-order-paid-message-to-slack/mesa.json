{
  "name": "Send Order Paid Message To Slack Channel",
  "version": "1.0.0",
  "description": "Send order paid message from Shopify Order to Slack channel when order has been paid.",
  "key": "shoppad/mesa-templates/shopify/order/send-order-paid-message-to-slack",
  "tags": ["Order"],
  "source": "shopify",
  "destination": "slack",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Order Webhook",
        "key": "in-shopify-order-webhook",
        "script": "in-shopify-order-webhook.js",
        "logging": "error",
        "topic": "orders/paid"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Send Slack Notification",
        "key": "out-send-slack-notification",
        "script": "out-send-slack-notification.js",
        "logging": "error"
      }
    ],
    "storage": [
      {
        "key": "slack-channel",
        "value": "#orders-paid"
      }
    ],
    "secrets": [
      {
        "key": "slack-webhook-url"
      }
    ]
  }
}
