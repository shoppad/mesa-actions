{
    "key": "shopify/order/add_shipping_province_tag",
    "name": "Add a shipping province tag to an order",
    "version": "1.0.0",
    "description": "Keep track of exactly where your store’s orders are headed. This template instantly updates the order's tags with the province of where your orders are shipped. You now have a simple and effective way to monitor your Shopify’s shipping zones.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify",
    "destination": "shopify",
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "metadata": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "update",
                "name": "Update Order",
                "key": "shopify_order_1",
                "metadata": {
                    "order_id": "{{shopify_order.id}}",
                    "body": {
                        "tags": "{{shopify_order.tags}}, {{shopify_order.shipping_address.province_code}}"
                    },
                    "site": "current"
                },
                "local_fields": [],
                "weight": 0
            }
        ],
        "storage": []
    }
}