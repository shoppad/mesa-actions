{
    "key": "shopify/order/add_shipping_province_tag",
    "name": "Add a shipping province tag to an order",
    "version": "1.0.0",
    "description": "Keep track of exactly where your store's orders are headed. This template instantly updates the order's tags with the province of where your orders are shipped. You now have a simple and effective way to monitor your Shopify's shipping zones.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify",
    "destination": "shopify",
    "seconds": 60,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "tag_add",
                "name": "Order Add Tag",
                "key": "shopify",
                "metadata": {
                    "order_id": "{{shopify_order.id}}",
                    "body": {
                        "tag": "{{shopify_order.shipping_address.province_code}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "storage": []
    }
}