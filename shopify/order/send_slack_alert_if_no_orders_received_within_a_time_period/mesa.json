{
    "key": "shopify/order/send_slack_alert_if_no_orders_received_within_a_time_period",
    "name": "Send a Slack message if no Shopify order was received in a timeframe",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "schedule",
                "name": "Schedule",
                "key": "schedule",
                "operation_id": "schedule",
                "metadata": {
                    "schedule": "@hourly:0 * * * *",
                    "enqueue_type": "schedule",
                    "next_sync_date_time": "2024-09-11T09:00:00-07:00"
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3.1,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "list",
                "name": "Get List of Orders",
                "key": "shopify",
                "operation_id": "get_orders",
                "metadata": {
                    "api_endpoint": "get admin/orders.json",
                    "query": {
                        "status": "any",
                        "created_at_min": "{{date:1 hour ago}}"
                    }
                },
                "local_fields": [],
                "selected_fields": [
                    "query.created_at_min"
                ],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "operation_id": "filter",
                "metadata": {
                    "a": "{{shopify}}",
                    "comparison": "is empty",
                    "additional": [
                        {
                            "operator": "and",
                            "comparison": "equals"
                        }
                    ]
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "slack",
                "name": "Send Message",
                "version": "v2",
                "key": "slack",
                "operation_id": "slack",
                "metadata": {
                    "channel": "{{ template | label: 'To which Slack channel would you like to send the message?', tokens: false }}",
                    "message": "No orders have been placed on {{context.shop.name}} in the past 1 hour."
                },
                "local_fields": [],
                "selected_fields": [],
                "on_error": "default",
                "weight": 2
            }
        ]
    }
}