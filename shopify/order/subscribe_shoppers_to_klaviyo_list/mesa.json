{
    "key": "shopify/order/subscribe_shoppers_to_klaviyo_list",
    "name": "Subscribe shoppers to a Klaviyo list after their first order",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "operation_id": "orders_create",
                "metadata": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "klaviyo",
                "entity": "list",
                "action": "subscribe",
                "name": "Subscribe List",
                "version": "v1",
                "key": "klaviyo_list",
                "operation_id": "list_subscribe",
                "metadata": {
                    "email": "{{shopify_order.email}}",
                    "list_id": "{{ template | label: 'What is the list that the customer should be added to in Klaviyo?', tokens: false }}"
                },
                "local_fields": [
                    {
                        "key": "mapping",
                        "type": "mapping",
                        "tokens": "brackets",
                        "location": "mapping"
                    }
                ],
                "weight": 0
            }
        ]
    }
}