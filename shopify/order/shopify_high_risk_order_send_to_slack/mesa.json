{
    "key": "shopify_high_risk_order_send_to_slack",
    "name": "Forward high-risk orders to Slack channel for manual review",
    "version": "1.0.0",
    "description": "Review high-risk orders to avoid potential chargebacks. This template sends a message to a Slack channel when an order that is determined as \"high-risk\" by Shopify's fraud algorithm. Your team can manually review the fraud analysis on the order and determine if the order is fraudulent.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify_webhook",
    "destination": "slack",
    "enabled": false,
    "logging": false,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify_webhook",
                "entity": "order",
                "action": "create",
                "name": "Shopify Order Created",
                "key": "shopify_order",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify_api",
                "entity": "order_risk",
                "action": "list",
                "name": "Shopify Get List Order Risk",
                "key": "shopify_order_risk",
                "metadata": {
                    "order_id": "{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "iterator",
                "name": "Iterator",
                "key": "iterator",
                "metadata": {
                    "key": "{{shopify_order_risk.risks}}"
                },
                "local_fields": [],
                "weight": 1
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter_1",
                "metadata": {
                    "a": "{{iterator.message}}",
                    "comparison": "equals",
                    "b": "Shopify recommendation"
                },
                "local_fields": [],
                "weight": 2
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{iterator.recommendation}}",
                    "comparison": "equals",
                    "b": "cancel"
                },
                "local_fields": [],
                "weight": 3
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify_api",
                "entity": "shop",
                "action": "list",
                "name": "Shopify Get List Shop",
                "key": "shopify_shop",
                "metadata": [],
                "local_fields": [],
                "weight": 4
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "slack",
                "name": "Slack",
                "key": "slack",
                "metadata": {
                    "message": "Order {{shopify_order.name}} was detected to be at a high risk for fraud. \n\nView the order: https:\/\/{{shopify_shop.myshopify_domain}}\/admin\/orders\/{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 5
            }
        ],
        "storage": []
    }
}