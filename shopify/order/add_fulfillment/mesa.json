{
    "key": "shopify/order/add_fulfillment",
    "name": "Add fulfillment to line items that don't require shipping",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "operation_id": "orders_create",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 5,
                "trigger_type": "output",
                "type": "loop",
                "entity": "loop",
                "name": "Loop",
                "version": "v2",
                "key": "loop",
                "operation_id": "loop_loop",
                "metadata": {
                    "key": "{{shopify_order.line_items[]}}",
                    "filter": {
                        "comparison": "equals"
                    }
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{loop.requires_shipping}}",
                    "comparison": "equals",
                    "b": "false"
                },
                "local_fields": [],
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order_fulfillment",
                "action": "custom_create",
                "name": "Create Order Fulfillment",
                "key": "shopify_order_fulfillment",
                "operation_id": "post_mesa_orders_order_id_fulfillments",
                "metadata": {
                    "api_endpoint": "post mesa/orders/{{order_id}}/fulfillments.json",
                    "order_id": "{{shopify_order.id}}",
                    "body": {
                        "location_id": "{{ template | label: 'To which location should we assign the order fulfillment?', description: '', tokens: false }}",
                        "line_items": [
                            {
                                "id": "{{loop.id}}",
                                "variant_id": "{{loop.variant_id}}",
                                "quantity": "{{loop.quantity}}"
                            }
                        ],
                        "notify_customer": "false"
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "fields": [
                            {
                                "key": "line_items",
                                "fields": [
                                    {
                                        "key": "applied_discount",
                                        "fields": []
                                    }
                                ]
                            },
                            {
                                "key": "notify_customer",
                                "type": "custom",
                                "allow_custom_fields": false
                            }
                        ]
                    }
                ],
                "weight": 2
            }
        ]
    }
}