{
  "key": "add-image-colors-to-product-as-tags",
  "name": "Add Image Colors to Product as Tags",
  "version": "1.0.0",
  "description": "Add the predominant colors from the product image as tags to a product when the product is created or updated.",
  "tags": ["Product"],
  "source": "shopify",
  "destination": "shopify",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Product Created",
        "key": "in-shopify-product-created",
        "script": "in-shopify-product-webhook.js",
        "topic": "products/create"
      },
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Product Updated",
        "key": "in-shopify-product-update",
        "script": "in-shopify-product-webhook.js",
        "topic": "products/update"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "shopify_api",
        "name": "Update Shopify Product",
        "key": "out-update-shopify-product",
        "script": "out-update-shopify-product.js",
        "shopify_api": "PUT admin/products/{{product_id}}.json"
      }
    ],
    "secrets": [
      {
        "key": "cloudinary-api-key"
      },
      {
        "key": "cloudinary-api-secret"
      }
    ],
    "storage": [
      {
        "key": "cloudinary-cloudname",
        "value": ""
      }
    ]
  }
}