{
    "key": "shopify/order/add_currency_to_order_tags",
    "name": "Add a currency tag to a Shopify order",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "operation_id": "orders_create",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "tag_add",
                "name": "Order Add Tag",
                "key": "shopify",
                "operation_id": "post_mesa_orders_order_id_tag",
                "metadata": {
                    "api_endpoint": "post mesa/orders/{{order_id}}/tag.json",
                    "order_id": "{{shopify_order.id}}",
                    "body": {
                        "tag": "{{shopify_order.currency}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ]
    }
}