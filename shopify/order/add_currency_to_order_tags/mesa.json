{
    "key": "shopify/order/add_currency_to_order_tags",
    "name": "Add a currency tag to an order",
    "version": "1.0.0",
    "description": "Keep track of which countries hold your strongest supporters. This template adds a currency tag to your Shopify order as soon as the order is created. You can trace the exact currencies used at checkout to take note of where your Shopifyâ€™s biggest fans are.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify",
    "destination": "shopify",
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "metadata": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "retrieve",
                "name": "Retrieve Order",
                "key": "shopify_order_2",
                "metadata": {
                    "order_id": "{{shopify_order.id}}",
                    "site": "current"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "update",
                "name": "Update Order",
                "key": "shopify_order_1",
                "metadata": {
                    "order_id": "{{shopify_order.id}}",
                    "body": {
                        "tags": "{{shopify_order_2.tags}}, {{shopify_order.currency}}"
                    },
                    "site": "current"
                },
                "local_fields": [],
                "weight": 1
            }
        ],
        "storage": []
    }
}