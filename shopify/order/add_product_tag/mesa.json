{
    "key": "add_product_tag",
    "name": "Copy Product Tags to the Order When a New Order is Created",
    "version": "1.0.0",
    "description": "To fulfill an order correctly, it’s helpful to note the product tags to make sure you’re shipping the correct item. Instead of manually copying each product tag by yourself, Mesa does everything for you each time by doing the time-consuming task when a new order is created. That’s extra time you’ll save to focus on more critical tasks.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify",
    "destination": "shopify",
    "enabled": false,
    "logging": false,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "metadata": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify_order.line_items[]}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "product",
                "action": "retrieve",
                "name": "Retrieve Product",
                "key": "shopify_product",
                "metadata": {
                    "product_id": "{{loop.product_id}}"
                },
                "local_fields": [],
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "retrieve",
                "name": "Retrieve Order",
                "key": "shopify_order_2",
                "metadata": {
                    "order_id": "{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "update",
                "name": "Update Order",
                "key": "shopify_order_1",
                "metadata": {
                    "body": {
                        "tags": "{{shopify_order_2.tags}}, {{shopify_product.tags}}"
                    },
                    "order_id": "{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 3
            }
        ],
        "storage": []
    }
}