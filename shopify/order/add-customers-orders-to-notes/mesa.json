{
  "key": "shoppad/mesa-templates/shopify/order/add-customers-orders-to-notes",
  "name": "Add Customer's Orders to Order Notes",
  "version": "1.0.0",
  "description": "When a repeat customer creates an order, add the number of orders the customer has made to the order notes.",
  "video": "",
  "tags": [],
  "source": "shopify_webhook",
  "destination": "shopify_api",
  "enabled": true,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "entity": "order",
        "action": "create",
        "name": "Shopify: Order Created",
        "key": "shopify-order-created",
        "metadata": {
          "topic": "orders/create"
        }
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "filter",
        "name": "Filter",
        "key": "filter",
        "metadata": {
          "script": "filter.js",
          "a": "{{source.customer.orders_count}}",
          "comparison": "greater than",
          "b": "0"
        },
        "destination_entity": "mapping"
      },
      {
        "trigger_type": "output",
        "type": "transform",
        "entity": "mapping",
        "name": "Mapping to Shopify Update Order",
        "key": "mapping-to-shopify-update-order",
        "metadata": {
          "mapping": [
            {
              "destination": "note",
              "source": "Customer's {{source.customer.orders_count}} order"
            }
          ],
          "script": "transform.js"
        },
        "local_fields": [
          {
            "key": "mapping",
            "type": "mapping"
          }
        ],
        "destination_entity": "order"
      },
      {
        "trigger_type": "output",
        "type": "shopify_api",
        "entity": "order",
        "action": "update",
        "name": "Shopify: Update Order",
        "key": "shopify-update-order",
        "metadata": {
          "shopify_api": "PUT admin/orders/{{order_id}}.json",
          "order_id": "{{source.id}}"
        },
        "source_entity": "mapping"
      }
    ],
    "storage": []
  }
}