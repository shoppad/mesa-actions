                                    },
                                    {
                                        "key": "Product Quantity",
                                        "label": "Product Quantity",
                                        "type": "text",
                                        "source": "airtable",
                                        "data_type": "number"
                                    },
                                    {
                                        "key": "Line Item ID",
                                        "label": "Line Item ID",
                                        "type": "text",
                                        "source": "airtable",
                                        "data_type": "number"
                                    },
                                    {
                                        "key": "Created At",
                                        "label": "Created At",
                                        "type": "text",
                                        "source": "airtable"
                                    },
                                    {
                                        "key": "Admin Order URL",
                                        "label": "Admin Order URL",
                                        "type": "text",
                                        "source": "airtable"
                                    }
                                ]
                            }
                        ]
                    }
                ],
