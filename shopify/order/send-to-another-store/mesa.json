{
  "key": "shoppad/mesa-templates/shopify/order/send-to-another-store",
  "name": "Send Order To Another Store",
  "version": "1.0.0",
  "description": "Send order from Shopify to another store when order is created, updated or deleted.",
  "tags": ["Order"],
  "source": "shopify",
  "destination": "shopify",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Order Create",
        "key": "in-shopify-order-create",
        "script": "in-shopify-order-create.js",
        "topic": "orders/create"
      },
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Order Update",
        "key": "in-shopify-order-update",
        "script": "in-shopify-order-update.js",
        "topic": "orders/updated"
      },
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Order Delete",
        "key": "in-shopify-order-delete",
        "script": "in-shopify-order-delete.js",
        "topic": "orders/delete"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Create Shopify Order",
        "key": "out-create-shopify-order",
        "script": "out-create-shopify-order.js"
      },
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Update Shopify Order",
        "key": "out-update-shopify-order",
        "script": "out-update-shopify-order.js"
      },
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Remove Shopify Order",
        "key": "out-delete-shopify-order",
        "script": "out-delete-shopify-order.js"
      }
    ],
    "secrets": [
      {
        "key": "store-password"
      }
    ],
    "storage": [
      {
        "key": "store-host"
      },
      {
        "key": "store-key"
      },
      {
        "key": "order-map.json",
        "value": "{}"
      }
    ]
  }
}