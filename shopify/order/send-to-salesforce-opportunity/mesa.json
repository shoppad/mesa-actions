{
  "key": "shoppad/mesa-templates/shopify/order/send-to-salesforce-opportunity",
  "name": "Send Order To Salesforce Opportunity",
  "version": "1.0.0",
  "description": "Send order from Shopify to Salesforce Opportunity when order is created.",
  "tags": [
    "order",
    "salesforce"
  ],
  "source": "shopify",
  "destination": "salesforce",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Order Create",
        "key": "in-shopify-order-create",
        "script": "in-shopify-order-create.js",
        "topic": "orders/create"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Create Salesforce Opportunity",
        "key": "out-create-salesforce-opportunity",
        "script": "out-create-salesforce-opportunity.js"
      }
    ],
    "secrets": [
      {
        "key": "salesforce.oauth"
      }
    ],
    "storage": [
      {
        "key": "salesforce-instance",
        "value": "https://na19.salesforce.com"
      }
    ]
  }
}