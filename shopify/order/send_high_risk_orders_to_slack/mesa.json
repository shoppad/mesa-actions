{
    "key": "send_high_risk_orders_to_slack",
    "name": "Forward High-Risk Orders to Slack for Manual Review",
    "version": "1.0.0",
    "description": "Protecting yourself from fraud is critical for not only the safety of your eCommerce store but for your customers as well. Automatically identify high-risk orders and forward them to your team on Slack so you can investigate them yourself. Itâ€™s an extra layer of protection that could save plenty of headaches in the future.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "shopify",
    "destination": "slack",
    "enabled": false,
    "logging": false,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify_order",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order_risk",
                "action": "list",
                "name": "Get List Order Risk",
                "key": "shopify_order_risk",
                "metadata": {
                    "order_id": "{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify_order_risk.risks}}"
                },
                "local_fields": [],
                "weight": 1
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter_1",
                "metadata": {
                    "a": "{{loop.message}}",
                    "comparison": "equals",
                    "b": "Shopify recommendation"
                },
                "local_fields": [],
                "weight": 2
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{loop.recommendation}}",
                    "comparison": "equals",
                    "b": "cancel"
                },
                "local_fields": [],
                "weight": 3
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "shop",
                "action": "list",
                "name": "Get List Shop",
                "key": "shopify_shop",
                "metadata": [],
                "local_fields": [],
                "weight": 4
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "slack",
                "version": "v2",
                "name": "Send Message",
                "key": "slack",
                "metadata": {
                    "message": "Order {{shopify_order.name}} was detected to be at a high risk for fraud. \n\nView the order: https://{{shopify_shop.myshopify_domain}}/admin/orders/{{shopify_order.id}}"
                },
                "local_fields": [],
                "weight": 5
            }
        ],
        "storage": []
    }
}