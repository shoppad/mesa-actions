{
    "key": "shopify/order/add_customers_orders_to_notes",
    "name": "Add customer's orders to order notes",
    "version": "1.0.0",
    "description": "Increase your awareness of who your most devoted customers are. This template will add the number of orders placed to the order notes each time a customer completes a purchase on your Shopify store. When you understand who your repeat customers are, you're in a better position to serve them and potentially use that information to acquire more repeat customers. It's a win-win!",
    "video": "",
    "tags": [],
    "source": "shopify",
    "destination": "shopify",
    "seconds": 120,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "shopify",
                "metadata": [],
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{shopify.customer.orders_count}}",
                    "comparison": "greater than",
                    "b": "0"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "note_update",
                "name": "Update Order Notes",
                "key": "shopify_1",
                "metadata": {
                    "order_id": "{{shopify.id}}",
                    "body": {
                        "note": "{{shopify.note}} Customer's {{shopify.customer.orders_count}} order"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            }
        ],
        "storage": []
    }
}