{
    "key": "shopify/customer/create_discount_code_for_new_customers_order",
    "name": "Create a unique discount code for new customers to apply towards their next order",
    "version": "1.0.0",
    "description": "Welcome your newest customers and encourage repeat business by offering them a discount on their next order. With this customizable template, you can create unique discount codes for each new customer to your business. When they become a new customer in Shopify, they'll automatically receive an email with a discount code for 20% off the next order they place within 14 days.",
    "video": "",
    "tags": [],
    "source": "",
    "destination": "",
    "seconds": 120,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify",
                "operation_id": "customers_create",
                "metadata": [],
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "price_rule",
                "action": "create",
                "name": "Create Price Rule",
                "key": "shopify_1",
                "operation_id": "post_price_rules",
                "metadata": {
                    "api_endpoint": "post admin/price_rules.json",
                    "body": {
                        "title": "NEWCUSTOMER {{shopify.id}} {{date:now}}",
                        "allocation_method": "across",
                        "value": "-20",
                        "value_type": "percentage",
                        "target_type": "line_item",
                        "customer_selection": "prerequisite",
                        "starts_at": "{{date:now}}",
                        "once_per_customer": "true",
                        "target_selection": "all",
                        "ends_at": "{{date:now +2 weeks}}",
                        "prerequisite_customer_ids": [
                            "{{shopify.id}}"
                        ],
                        "created_at": "{{date:now}}",
                        "prerequisite_subtotal_range": {
                            "greater_than_or_equal_to": "1.0"
                        }
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "price_rule",
                "action": "retrieve",
                "name": "Retrieve Price Rule",
                "key": "shopify_2",
                "operation_id": "get_price_rules_price_rule_id",
                "metadata": {
                    "api_endpoint": "get admin/price_rules/{{price_rule_id}}.json",
                    "price_rule_id": "{{shopify_1.id}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "discount_code",
                "action": "create",
                "name": "Create Price Rule Discount Code",
                "key": "shopify_3",
                "operation_id": "post_price_rules_price_rule_id_discount_codes",
                "metadata": {
                    "api_endpoint": "post admin/price_rules/{{price_rule_id}}/discount_codes.json",
                    "price_rule_id": "{{shopify_2.id}}",
                    "body": {
                        "code": "NEWCUSTOMER{{shopify.id}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "customer",
                "action": "tag_add",
                "name": "Customer Add Tag",
                "key": "shopify_4",
                "operation_id": "post_mesa_customers_customer_id_tag",
                "metadata": {
                    "api_endpoint": "post mesa/customers/{{customer_id}}/tag.json",
                    "customer_id": "{{shopify.id}}",
                    "body": {
                        "tag": "{{shopify_3.code}}"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{shopify.phone}}",
                    "comparison": "is not empty"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 4
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "sms",
                "entity": "message",
                "action": "send",
                "name": "Send Message",
                "key": "sms",
                "operation_id": "message_send",
                "metadata": {
                    "to": "{{shopify.phone}}",
                    "message": "Thank you for shopping with {{context.shop.name}}.\n\nTake 20% off your next order.\n\nUse online code: {{shopify_3.code}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 5
            }
        ],
        "storage": []
    }
}