{
  "key": "shoppad/mesa-templates/shopify/customer/send-to-hubspot-contact-and-mark-as-opportunity",
  "name": "Send Customer To Hubspot Contact And Mark As Opportunity",
  "version": "1.0.0",
  "description": "Send customer from Shopify to HubSpot Contact and mark as opportunity when customer is created.",
  "tags": ["Customer"],
  "source": "shopify",
  "destination": "hubspot",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Customer Create",
        "key": "in-shopify-customer-create",
        "script": "in-shopify-customer-create.js",
        "topic": "customers/create"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Create Hubspot Contact",
        "key": "out-create-hubspot-contact",
        "script": "out-create-hubspot-contact.js"
      }
    ],
    "secrets": [
      {
        "key": "hubspot.hapi"
      }
    ],
    "storage": [
      {
        "key": "hubspot_lifecyclestage",
        "value": "opportunity"
      }
    ]
  }
}