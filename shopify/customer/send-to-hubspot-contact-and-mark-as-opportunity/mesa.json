{
  "key": "shoppad/mesa-templates/shopify/customer/send-to-hubspot-contact-and-mark-as-opportunity",
  "name": "Send Customer To HubSpot Contact And Mark As Opportunity",
  "version": "1.0.0",
  "description": "Send customer from Shopify to HubSpot Contact and mark as opportunity when customer is created.",
  "tags": ["Customer"],
  "source": "shopify",
  "destination": "hubspot",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Customer Create",
        "key": "in-shopify-customer-create",
        "script": "in-shopify-customer-create.js",
        "topic": "customers/create"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Create Hubspot Contact",
        "key": "out-create-hubspot-contact",
        "script": "out-create-hubspot-contact.js"
      }
    ],
    "secrets": [
      {
        "key": "hubspot-hapi"
      }
    ],
    "storage": [
      {
        "key": "hubspot-lifecycle-stage",
        "value": "opportunity"
      },
      {
        "key": "customer-mapping.json",
        "value": "{\n  \"email\":{\n     \"shopify\":\"email\",\n     \"hubspot\":\"email\"\n  },\n  \"first_name\":{\n     \"shopify\":\"first_name\",\n     \"hubspot\":\"firstname\"\n  },\n  \"last_name\":{\n     \"shopify\":\"last_name\",\n     \"hubspot\":\"lastname\"\n  },\n  \"phone\":{\n     \"shopify\":\"phone\",\n     \"hubspot\":\"phone\"\n  },\n  \"lifecyclestage\": {\n    \"shopify\": \"lifecyclestage\",\n    \"hubspot\": \"lifecyclestage\"\n  }\n}"
      }
    ]
  }
}