{
    "key": "shopify/customer/add_email_to_klaviyo_list",
    "name": "Add a Shopify customer's email address to a Klaviyo list",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "created",
                "name": "Customer Created",
                "key": "shopify",
                "operation_id": "customers_create",
                "metadata": [],
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "{{shopify.email}}",
                    "comparison": "is not empty"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "klaviyo",
                "entity": "list",
                "action": "subscribe",
                "name": "List Subscribe",
                "version": "v1",
                "key": "klaviyo",
                "operation_id": "list_subscribe",
                "metadata": {
                    "email": "{{shopify.email}}",
                    "mapping": [
                        {
                            "destination": "id",
                            "source": "{{shopify.id}}"
                        },
                        {
                            "destination": "email",
                            "source": "{{shopify.email}}"
                        },
                        {
                            "destination": "first_name",
                            "source": "{{shopify.first_name}}"
                        },
                        {
                            "destination": "last_name",
                            "source": "{{shopify.last_name}}"
                        },
                        {
                            "destination": "phone",
                            "source": "{{shopify.phone}}"
                        },
                        {
                            "destination": "tags",
                            "source": "{{shopify.tags}}"
                        },
                        {
                            "destination": "notes",
                            "source": "{{shopify.note}}"
                        }
                    ],
                    "list_id": "{{ template | label: 'What is the list that the customer should be added to in Klaviyo?', tokens: false }}"
                },
                "local_fields": [
                    {
                        "key": "mapping",
                        "type": "mapping",
                        "tokens": "brackets",
                        "location": "mapping"
                    }
                ],
                "on_error": "default",
                "weight": 1
            }
        ]
    }
}