{
    "key": "shopify/customer/backorder_tag_to_klaviyo_email_list",
    "name": "Subscribe shoppers to a Klaviyo list after their first order",
    "version": "1.0.0",
    "enabled": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 3,
                "trigger_type": "input",
                "type": "shopify",
                "entity": "customer",
                "action": "updated",
                "name": "Customer Updated",
                "key": "shopify",
                "operation_id": "customers_update",
                "metadata": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4.1,
                "trigger_type": "output",
                "type": "filter",
                "name": "Filter",
                "key": "filter",
                "metadata": {
                    "a": "backorder",
                    "comparison": "in",
                    "b": "{{shopify.tags}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "klaviyo",
                "entity": "profile_subscription_bulk_create_job",
                "action": "create",
                "name": "Subscribe Profile",
                "version": "v3",
                "key": "klaviyo",
                "operation_id": "subscribe_profiles",
                "metadata": {
                    "api_endpoint": "post /api/profile-subscription-bulk-create-jobs/",
                    "body": {
                        "data": {
                            "type": "profile-subscription-bulk-create-job",
                            "relationships": {
                                "list": {
                                    "data": {
                                        "type": "list",
                                        "id": "{{ template | label: 'What is the Klaviyo list you would like the customer to be subscribed to?', tokens: false }}"
                                    }
                                }
                            },
                            "attributes": {
                                "profiles": {
                                    "data": [
                                        {
                                            "type": "profile",
                                            "attributes": {
                                                "email": "{{shopify.email}}",
                                                "phone_number": "{{shopify.phone}}",
                                                "subscriptions": {
                                                    "email": {
                                                        "marketing": {
                                                            "consent": "SUBSCRIBED"
                                                        }
                                                    },
                                                    "sms": {
                                                        "marketing": {
                                                            "consent": "SUBSCRIBED"
                                                        }
                                                    }
                                                }
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            }
        ]
    }
}