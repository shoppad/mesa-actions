{
  "key": "shoppad/mesa-templates/shopify/customer/add-to-google-sheets-document",
  "name": "Add Shopify Customer to Google Sheets Document",
  "version": "1.0.0",
  "description": "Send customer from Shopify to Google Sheets document when customer is updated.",
  "tags": ["Customer"],
  "source": "shopify",
  "destination": "google-sheets",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "shopify_webhook",
        "name": "Shopify Customer Update Webhook",
        "key": "in-shopify-customer-update-webhook",
        "script": "in-shopify-customer-update-webhook.js",
        "topic": "customers/update"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Update Google Sheets",
        "key": "out-update-google-sheets",
        "script": "out-update-google-sheets.js"
      },
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Read Google Sheets",
        "key": "out-read-google-sheets",
        "script": "out-read-google-sheets.js"
      },
      {
        "trigger_type": "output",
        "type": "custom",
        "name": "Update Customer in Google Sheets",
        "key": "out-update-customer-in-google-sheets",
        "script": "out-update-customer-in-google-sheets.js"
      }
    ],
    "secrets": [
      {
        "key": "google-refresh-token"
      },
      {
        "key": "google-access-token"
      },
      {
        "key": "google-client-id"
      },
      {
        "key": "google-client-secret"
      },
      {
        "key": "google-expires-at"
      }
    ],
    "storage": [
      {
        "key": "google-sheets-id",
        "value": ""
      }
    ]
  }
}
