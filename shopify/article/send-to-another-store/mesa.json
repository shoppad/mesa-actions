{
  "key": "send-blog-article-to-another-store",
  "name": "Send Blog Article to Another Store",
  "version": "1.0.0",
  "description": "Sends blog articles from one Shopify store to another Shopify store after an article is created and published. This automation defaults to checking for new blog articles once an hour, but can be adjusted by changing the 'Schedule' value. On the first run this automation will copy over all published articles from the local store and copy only newly-published articles on subsequent runs.",
  "tags": ["marketing"],
  "source": "shopify",
  "destination": "shopify",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "custom",
        "name": "Fetch New Shopify Blog Articles",
        "key": "in-fetch-new-shopify-blog-articles",
        "schedule": "* */1 * * *",
        "script": "in-fetch-new-shopify-blog-articles.js"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "shopify_api",
        "name": "Create Blog Article On Another Shopify Store",
        "key": "out-create-blog-article-on-another-shopify-store",
        "script": "out-create-shopify-article.js",
        "username": "",
        "password": "store-password",
        "shopify_api": "POST admin/blogs/{{blog_id}}/articles.json",
        "custom_connection": true,
        "custom_uuid": ""
      }
    ],
    "secrets": [
      {
        "key": "store-password"
      }
    ],
    "storage": [
      {
        "key": "local-last-article-id",
        "value": ""
      },
      {
        "key": "local-blog-id",
        "value": ""
      },
      {
        "key": "remote-blog-id",
        "value": ""
      }
    ]
  }
}