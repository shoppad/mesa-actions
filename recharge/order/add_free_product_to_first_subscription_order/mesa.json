{
    "key": "add_free_product_to_first_subscription_order",
    "name": "Add a free product to a customer's first Recharge order",
    "version": "1.0.0",
    "description": "Welcome new customers to your business with something special in their first subscription order. This template will add a free product to a customer's first Recharge order. It's a small token of appreciation that can leave a big impression on your customers.",
    "video": "",
    "tags": [],
    "source": "",
    "destination": "",
    "seconds": 60,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "order",
                "action": "order\/created",
                "name": "Order Created",
                "key": "recharge",
                "metadata": [],
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "recharge",
                "entity": "mesa_order_filter",
                "action": "list",
                "name": "Filter by Order Count of Subscription",
                "key": "recharge_1",
                "metadata": {
                    "path": {
                        "order_id": "{{recharge.external_order_id.ecommerce}}",
                        "number_of_orders": "1"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "line_item_add",
                "name": "Add Line Item to Order",
                "key": "shopify",
                "metadata": {
                    "order_id": "{{recharge.external_order_id.ecommerce}}",
                    "body": {
                        "quantity": "1",
                        "discount_type": "Percentage",
                        "discount_amount": "100",
                        "allow_duplicates": true,
                        "notify_customer": "false"
                    }
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            }
        ],
        "storage": []
    }
}