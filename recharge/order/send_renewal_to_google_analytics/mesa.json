{
    "key": "recharge/order/send_renewal_to_google_analytics",
    "name": "Send Recharge renewal data to Google Analytics",
    "version": "1.0.0",
    "description": "Google Analytics allows you to keep track of your store's traffic and advertisement return of investment. This template sends client ID data to Google Analytics when a Recharge successful order renewal is created. Your Google Analytics will now have crucial information pertaining to your Recharge orders.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "recharge",
    "destination": "google-analytics",
    "seconds": 60,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "order",
                "action": "order/processed",
                "name": "Order Processed",
                "key": "recharge-order-processed",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "retrieve",
                "name": "Retrieve Order",
                "key": "shopify-retrieve-order",
                "metadata": {
                    "order_id": "{{recharge-order-processed.external_order_id.ecommerce}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "custom",
                "name": "Custom Code: Get Client ID from note attributes",
                "key": "custom",
                "metadata": {
                    "script": "custom.js",
                    "description": "Gets the Client ID from the order's note attributes."
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "googleanalytics",
                "entity": "transaction",
                "action": "create",
                "name": "Create Transaction",
                "key": "googleanalytics_transaction",
                "metadata": {
                    "mapping": [
                        {
                            "destination": "ti",
                            "source": "{{shopify-retrieve-order.name}}"
                        },
                        {
                            "destination": "tr",
                            "source": "{{shopify-retrieve-order.total_price}}"
                        },
                        {
                            "destination": "tt",
                            "source": "{{shopify-retrieve-order.total_tax}}"
                        },
                        {
                            "destination": "ts",
                            "source": "{{shopify-retrieve-order.total_shipping_price_set.shop_money.amount}}"
                        },
                        {
                            "destination": "cu",
                            "source": "{{shopify-retrieve-order.currency}}"
                        },
                        {
                            "destination": "ta",
                            "source": "{{shopify-retrieve-order.source_name}}"
                        },
                        {
                            "destination": "cid",
                            "source": "{{custom.cid}}"
                        }
                    ]
                },
                "local_fields": [
                    {
                        "key": "mapping",
                        "type": "mapping",
                        "tokens": "brackets",
                        "location": "mapping"
                    }
                ],
                "on_error": "default",
                "weight": 2
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify-retrieve-order.line_items[]}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": "4",
                "trigger_type": "output",
                "type": "api",
                "entity": "no_auth",
                "name": "API No Authentication",
                "key": "api_no_auth",
                "metadata": {
                    "method": "post",
                    "url": "https://www.google-analytics.com/collect",
                    "content_type": "application/json",
                    "custom_body_toggle": true,
                    "custom_body": "v=1&tid={{Add Google Analytics ID}}&cid={{custom.cid}}&t=item&ti={{shopify-retrieve-order.name}}&in={{loop.title}}&ip={{loop.price}}&iq={{loop.quantity}}&ic={{loop.sku}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 4
            }
        ],
        "storage": []
    }
}