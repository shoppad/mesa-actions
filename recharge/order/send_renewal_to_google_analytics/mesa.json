{
    "key": "recharge/order/send_renewal_to_google_analytics",
    "name": "Send Recharge renewal data to Google Analytics",
    "version": "1.0.0",
    "description": "Google Analytics allows you to keep track of your store's traffic and advertisement return of investment. This template sends client ID data to Google Analytics when a Recharge successful order renewal is created. Your Google Analytics will now have crucial information pertaining to your Recharge orders.",
    "video": "",
    "tags": [],
    "source": "",
    "destination": "",
    "seconds": 60,
    "enabled": false,
    "logging": true,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "recharge",
                "entity": "order",
                "action": "order\/processed",
                "name": "Order Processed",
                "key": "recharge",
                "metadata": [],
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify",
                "entity": "order",
                "action": "retrieve",
                "name": "Retrieve Order",
                "key": "shopify",
                "metadata": {
                    "order_id": "{{recharge.external_order_id.ecommerce}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 0
            },
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "custom",
                "name": "Custom Code: Get Client ID from note attributes",
                "key": "custom",
                "metadata": {
                    "script": "custom.js",
                    "description": "Gets the Client ID from the order's note attributes."
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 1
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "googleanalytics",
                "entity": "transaction",
                "action": "create",
                "name": "Create Transaction",
                "key": "googleanalytics",
                "metadata": {
                    "body": {
                        "ti": "{{shopify.name}}",
                        "tr": "{{shopify.total_price}}",
                        "tt": "{{shopify.total_tax}}",
                        "ts": "{{shopify.total_shipping_price_set.shop_money.amount}}",
                        "ta": "{{shopify.source_name}}",
                        "cu": "{{shopify.currency}}",
                        "cid": "{{custom.cid}}"
                    },
                    "script": "googleanalytics.js"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 2,
                "version": "UA"
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{shopify.line_items[]}}"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 3
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "googleanalytics",
                "entity": "transaction_item",
                "action": "attach",
                "name": "Attach Items to Transaction",
                "key": "googleanalytics_1",
                "metadata": {
                    "body": {
                        "ti": "{{shopify.name}}",
                        "cu": "{{shopify.currency}}",
                        "cid": "{{custom.cid}}",
                        "items": [
                            {
                                "in": "{{loop.title}}",
                                "ip": "{{loop.price}}",
                                "iq": "{{loop.quantity}}",
                                "ic": "{{loop.sku}}",
                                "iv": "{{loop.vendor}}"
                            }
                        ]
                    },
                    "script": "googleanalytics_1.js"
                },
                "local_fields": [],
                "on_error": "default",
                "weight": 4,
                "version": "UA"
            }
        ],
        "storage": []
    }
}