{
  "key": "shoppad/mesa-templates/bold/subscription/send-notification-on-new-subscription",
  "name": "Send SMS Notification when Bold Subscription Created",
  "version": "1.0.0",
  "description": "Sends a SMS notification for all new Bold Subscriptions via the Twillio service.  Replace \"MYSHOP\" with your Shopify store in the subscription link below or enter a new, customized message for the outgoing SMS.",
  "video": "",
  "readme": "",
  "tags": [],
  "source": "bold",
  "destination": "twilio",
  "enabled": false,
  "logging": false,
  "debug": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "bold",
        "entity": "subscription",
        "action": "subscription/created",
        "name": "Bold Subscription Created",
        "key": "bold_subscription",
        "metadata": {
          "topic": "subscription/created",
          "host": ""
        },
        "local_fields": null,
        "weight": 0
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "twilio",
        "entity": "sms",
        "action": "send",
        "name": "Twilio Send SMS",
        "key": "twilio_sms",
        "metadata": {
          "message": "New subscription: {{bold_subscription.first_name}} {{bold_subscription.last_name}}\nLink: https://MYSHOP.myshopify.com/admin/apps/recurring-orders/s/MYSHOP/customers/edit_customer?customer_id={{bold_subscription.shopify_customer_id}}&customer_email={{bold_subscription.customer_email}}"
        },
        "local_fields": null,
        "weight": 0
      }
    ],
    "storage": []
  }
}
