{
  "key": "shoppad/mesa-templates/salesforce/lead/send-to-shopify-customer",
  "name": "Send Salesforce Lead To Shopify Customer",
  "version": "1.0.0",
  "description": "Send contact from Salesforce to Shopify customer when Salesforce lead converts.",
  "tags": [
    "Customer"
  ],
  "source": "salesforce",
  "destination": "shopify",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "json_webhook",
        "name": "Salesforce Lead Convert",
        "key": "in-salesforce-lead-convert",
        "script": "in-salesforce-lead-convert.js"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "type": "shopify_api",
        "name": "Create Shopify Customer",
        "key": "out-create-shopify-product",
        "script": "out-create-shopify-customer.js",
        "shopify_api": "POST admin/customers.json"
      }
    ],
    "secrets": [
      {
        "key": "salesforce.oauth"
      }
    ],
    "storage": [
      {
        "key": "salesforce-instance",
        "value": "https://na19.salesforce.com"
      }
    ]
  }
} 