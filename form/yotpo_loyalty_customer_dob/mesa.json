{
    "key": "yotpo_loyalty_customer_dob",
    "name": "Save a Customer's Date of Birth to a Yotpo Loyalty Customer",
    "version": "1.0.0",
    "description": "An excellent way to engage customers is to offer special rewards on their birthday. Thankfully, Mesa allows you to save a customer\u2019s data of birth via Mesa Forms so you don\u2019t forget.",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "",
    "destination": "",
    "seconds": 0,
    "enabled": false,
    "logging": false,
    "debug": false,
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "form",
                "name": "Form",
                "key": "form",
                "metadata": {
                    "form_data": [
                        {
                            "type": "header",
                            "subtype": "h1",
                            "label": "Submit your birthday to receive surprises!"
                        },
                        {
                            "type": "number",
                            "required": true,
                            "label": "Month",
                            "placeholder": "Enter your birthday month.",
                            "className": "form-control",
                            "name": "birthday-month",
                            "min": 1,
                            "max": 12,
                            "step": 1
                        },
                        {
                            "type": "number",
                            "required": true,
                            "label": "Date",
                            "placeholder": "Enter your birthday date.",
                            "className": "form-control",
                            "name": "birthday-date",
                            "min": 1,
                            "max": 31,
                            "step": 1
                        },
                        {
                            "type": "number",
                            "required": true,
                            "label": "Year",
                            "placeholder": "Enter your birthday year.",
                            "className": "form-control",
                            "name": "birthday-year",
                            "min": 1900,
                            "max": 2100,
                            "step": 1
                        },
                        {
                            "type": "hidden",
                            "name": "customer-id",
                            "value": "{{customer.id}}"
                        }
                    ]
                },
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 3,
                "trigger_type": "output",
                "type": "shopify_api",
                "entity": "customer",
                "action": "retrieve",
                "name": "Shopify Customer Retrieve",
                "key": "shopify_customer",
                "metadata": {
                    "customer_id": "{{form.customer-id}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "yotpoloyalty",
                "entity": "birthday",
                "action": "set",
                "name": "Yotpo Loyalty & Referrals Birthday Set",
                "key": "yotpoloyalty_birthday",
                "metadata": {
                    "body": {
                        "customer_email": "{{shopify_customer.email}}",
                        "customer_id": "{{shopify_customer.id}}",
                        "day": "{{form.birthday-date}}",
                        "month": "{{form.birthday-month}}",
                        "year": "{{form.birthday-year}}"
                    }
                },
                "local_fields": [],
                "weight": 1
            }
        ],
        "storage": []
    }
}