{
    "key": "shoppad/mesa-templates/tracktor/fulfillment/delay_in_transit_email",
    "name": "Send Email if Package is Delayed in Transit",
    "version": "1.0.0",
    "description": "Send an email to the store owner when an order is in transit for 60+ hours",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "tracktor",
    "destination": "email",
    "enabled": true,
    "config": {
        "inputs": [
            {
                "trigger_type": "input",
                "type": "tracktor",
                "entity": "fulfillment",
                "action": "fulfillment\/in_transit",
                "name": "Tracktor Fulfillment Status In Transit",
                "key": "tracktor_fulfillment_status",
                "metadata": [],
                "local_fields": null,
                "weight": 0
            }
        ],
        "outputs": [
            {
                "trigger_type": "output",
                "type": "delay",
                "entity": null,
                "action": null,
                "name": "Delay  ",
                "key": "delay",
                "metadata": {
                    "amount": 60,
                    "unit": "hours"
                },
                "local_fields": null,
                "weight": 0
            },
            {
                "trigger_type": "output",
                "type": "tracktor",
                "entity": "fulfillment",
                "action": "retrieve",
                "name": "Tracktor Retrieve Fulfillment",
                "key": "tracktor_fulfillment",
                "metadata": {
                    "fulfillment_id": "{{tracktor_order_status.fulfillments[0].fulfillment_id}}"
                },
                "local_fields": null,
                "weight": 1
            },
            {
                "trigger_type": "output",
                "type": "filter",
                "entity": "",
                "action": "",
                "name": "Filter  ",
                "key": "filter",
                "metadata": {
                    "script": "filter.js",
                    "a": "{{tracktor_fulfillment_status.latest_status.label}}",
                    "comparison": "does not equal",
                    "b": "{{tracktor_fulfillment_status.status.delivered.label}}"
                },
                "local_fields": null,
                "weight": 2
            },
            {
                "trigger_type": "output",
                "type": "email",
                "entity": "",
                "action": "",
                "name": "Email",
                "key": "email",
                "metadata": {
                    "to": "{{context.shop.email}}",
                    "subject": "Order {{tracktor_fulfillment_status.order_name}} Delayed in Transit",
                    "message": "Order Number: {{tracktor_fulfillment_status.order_name}} \nCarrier: {{tracktor_fulfillment_status.carrier}}\nTracking: {{tracktor_fulfillment.tracking_number}}"
                },
                "local_fields": null,
                "weight": 3
            }
        ],
        "storage": []
    }
}
