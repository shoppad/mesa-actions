{
  "key": "add_tag_with_current_delivery_status",
  "name": "Tag Orders With the Delivery Status When Fulfillment Status Changes",
  "version": "1.0.0",
  "description": "Once an order changes status during transit, you’ll need to update the fulfillment status on Shopify. Thankfully, Mesa does everything for you by instantly tagging orders that are being shipped with the “delivery status”. It’s going to make it easier for both you and the customer to track where the order is going.",
  "video": "",
  "readme": "",
  "tags": [],
  "source": "tracktor",
  "destination": "shopify",
  "enabled": false,
  "logging": false,
  "debug": false,
  "config": {
    "inputs": [
      {
        "schema": 2,
        "trigger_type": "input",
        "type": "tracktor",
        "entity": "order",
        "action": "order/all",
        "name": "Tracktor Order Any Update",
        "key": "tracktor_order",
        "metadata": [],
        "weight": 0
      }
    ],
    "outputs": [
      {
        "schema": 3,
        "trigger_type": "output",
        "type": "shopify",
        "entity": "order",
        "action": "retrieve",
        "name": "Shopify Retrieve Order",
        "key": "shopify_order_1",
        "metadata": {
          "order_id": "{{tracktor_order.order_id}}"
        },
        "local_fields": [],
        "weight": 0
      },
      {
        "schema": 3,
        "trigger_type": "output",
        "type": "shopify",
        "entity": "order",
        "action": "update",
        "name": "Shopify Update Order",
        "key": "shopify_order",
        "metadata": {
          "body": {
            "tags": "{{shopify_order_1.tags}}, {{tracktor_order.fulfillments[0].latest_status.label}}"
          },
          "order_id": "{{shopify_order_1.id}}"
        },
        "local_fields": [],
        "weight": 1
      }
    ],
    "storage": []
  }
}
