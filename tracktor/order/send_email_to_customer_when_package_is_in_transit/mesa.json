{
  "key": "send_email_to_customer_when_package_is_in_transit",
  "name": "Send Email to customers when their package is \"In Transit\"",
  "version": "1.0.0",
  "description": "",
  "video": "",
  "readme": "",
  "tags": [],
  "source": "tracktor",
  "destination": "email",
  "enabled": true,
  "logging": false,
  "debug": false,
  "config": {
    "inputs": [
      {
        "schema": 2,
        "trigger_type": "input",
        "type": "tracktor",
        "entity": "order",
        "action": "order/in_transit",
        "name": "Tracktor Order In Transit",
        "key": "tracktor_order",
        "metadata": [],
        "weight": 0
      }
    ],
    "outputs": [
      {
        "schema": 3,
        "trigger_type": "output",
        "type": "tracktor",
        "entity": "order",
        "action": "retrieve",
        "name": "Tracktor Retrieve Order",
        "key": "tracktor_order_1",
        "metadata": {
          "order_id": "{{tracktor_order.order_id}}"
        },
        "local_fields": [],
        "weight": 0
      },
      {
        "schema": 2,
        "trigger_type": "output",
        "type": "email",
        "name": "Email",
        "key": "email",
        "metadata": {
          "to": "{{tracktor_order_1.order_email}}",
          "subject": "Order {{tracktor_order_1.order_name}} is on your way!",
          "message": "Hello {{tracktor_order_1.customer_first_name}}!\n\nThanks for your patience as your order is on its way to you!\n\nThanks"
        },
        "local_fields": [],
        "weight": 1
      }
    ],
    "storage": []
  }
}
