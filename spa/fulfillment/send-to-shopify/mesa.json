{
  "key": "shoppad/mesa-templates/spa/fulfillment/send-to-shopify",
  "name": "Send SPA FTP File To Shopify Fulfillment",
  "version": "1.0.0",
  "description": "Send FTP file containing fulfillments from Softpack/SPA Inc. to Shopify fulfillment every 6 hours.",
  "tags": ["fulfillment", "3PL"],
  "source": "spa",
  "destination": "shopify",
  "enabled": false,
  "config": {
    "inputs": [
      {
        "trigger_type": "input",
        "type": "ftp",
        "method": "sftp",
        "name": "FTP Fulfillments",
        "key": "in-ftp-fulfillments",
        "schedule": "5 */6 * * *",
        "script": "in-ftp-fulfillments.js",
        "host": "",
        "port": "22",
        "file": "confirms/*",
        "username": "",
        "password": "ftp-password",
        "logging": "notice"
      }
    ],
    "outputs": [
      {
        "trigger_type": "output",
        "enabled": true,
        "type": "shopify_api",
        "name": "Create Shopify Fulfillment",
        "key": "out-create-shopify-fulfillment",
        "script": "out-create-shopify-fulfillment.js",
        "shopify_api": "POST admin/orders/{{order_id}}/fulfillments.json"
      }
    ],
    "secrets": [
      {
        "uuid": "jeffs-dev",
        "key": "ftp-password"
      }
    ]
  }
}