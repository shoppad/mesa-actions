{
    "key": "shoppad/mesa-templates/blogstudio/article/send-to-another-store",
    "name": "Send Blog Studio Article to Another Store",
    "version": "1.0.0",
    "description": "Sends Blog Studio articles from one Shopify store to another Shopify store after a new article is created.",
    "video": "",
    "tags": [],
    "source": "blogstudio",
    "destination": "blogstudio",
    "enabled": false,
    "config": {
        "inputs": [
            {
                "trigger_type": "input",
                "type": "blogstudio",
                "entity": "article",
                "action": "created",
                "name": "Blog Studio Article Created",
                "key": "blog_studio_article",
                "metadata": {
                    "last_sync_date_time": "",
                    "blog": ""
                },
                "local_fields": null,
                "weight": 0
            }
        ],
        "outputs": [
            {
                "trigger_type": "output",
                "type": "transform",
                "entity": "",
                "action": "",
                "name": "Mapping to Blog Studio Create Article",
                "key": "blog_studio_article_transform",
                "metadata": {
                    "script": "blog_studio_article_transform.js",
                    "mapping": [
                        {
                            "destination": "title",
                            "source": "{{blog_studio_article.title}}"
                        },
                        {
                            "destination": "created_at",
                            "source": "{{blog_studio_article.created_at}}"
                        },
                        {
                            "destination": "body_html",
                            "source": "{{blog_studio_article.body_html}}"
                        },
                        {
                            "destination": "author",
                            "source": "{{blog_studio_article.author}}"
                        },
                        {
                            "destination": "published_at",
                            "source": "{{blog_studio_article.published_at}}"
                        },
                        {
                            "destination": "summary_html",
                            "source": "{{blog_studio_article.summary_html}}"
                        },
                        {
                            "destination": "handle",
                            "source": "{{blog_studio_article.handle}}"
                        },
                        {
                            "destination": "tags",
                            "source": "{{blog_studio_article.tags}}"
                        }
                    ]
                },
                "local_fields": [
                    {
                        "key": "mapping",
                        "type": "mapping",
                        "tokens": "brackets"
                    }
                ],
                "weight": 0
            },
            {
                "trigger_type": "output",
                "type": "blogstudio",
                "entity": "article",
                "action": "create",
                "name": "Blog Studio Create Article",
                "key": "blog_studio_article",
                "metadata": {
                    "blog": ""
                },
                "local_fields": null,
                "weight": 1
            }
        ],
        "storage": []
    }
}