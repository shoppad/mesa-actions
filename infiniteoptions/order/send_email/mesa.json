  "config": {
    "inputs": [
      {
        "schema": 4.1,
        "trigger_type": "input",
        "type": "infiniteoptions",
        "entity": "order",
        "action": "created",
        "name": "Infinite Options Order Created",
        "key": "infiniteoptions_order",
        "metadata": {
          "field_name": "Special"
        },
        "local_fields": [],
        "weight": 0
      }
