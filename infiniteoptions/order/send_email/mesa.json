{
    "key": "infiniteoptions/order/send_email",
    "name": "Receive an email when a customer purchases a product with options",
    "version": "1.0.0",
    "description": "Avoid surprises and ensure both you and your team are prepared for when an order is placed containing a product that requires special handling. MESA will automatically send an email to your storeâ€™s registered email address when an order with Infinite Options products is purchased",
    "video": "",
    "readme": "",
    "tags": [],
    "source": "",
    "destination": "",
    "seconds": 0,
    "enabled": false,
    "logging": false,
    "debug": false,
    "setup": true,
    "config": {
        "inputs": [
            {
                "schema": 4.1,
                "trigger_type": "input",
