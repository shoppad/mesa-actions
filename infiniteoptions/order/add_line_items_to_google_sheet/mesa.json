{
    "key": "infiniteoptions_order_add_line_items_to_google_sheet_1",
    "name": "Add Infinite Options Line Items to Google Sheet",
    "version": "1.0.0",
    "enabled": false,
    "wizard": {
        "mode": "custom",
        "fields": [
            {
                "name": "create_spreadsheet_name",
                "target": "googlesheets_row.create_spreadsheet_name",
                "label": "Spreadsheet Name",
                "tokens": false,
                "description": "Give your new Google spreadsheet a name."
            },
            {
                "name": "fields",
                "target": "googlesheets_row.mapping",
                "description": "This template will automatically create a new row for every line item on orders that are placed. Select the columns you want to include in your spreadsheet.",
                "options": [
                    {
                        "value": "Order URL",
                        "description": "The URL to the order in the Shopify admin."
                    },
                    {
                        "value": "Order Name",
                        "description": "The human-readable label for the order (example: #1001)."
                    },
                    {
                        "value": "Email",
                        "description": "The email address of the customer that placed the order."
                    },
                    {
                        "value": "Shipping Name",
                        "description": "The full name of the recipient of the Shipping Address."
                    },
                    {
                        "value": "Address",
                        "description": "The street address of the Shipping Address."
                    },
                    {
                        "value": "City",
                        "description": "The city of the Shipping Address."
                    },
                    {
                        "value": "Province",
                        "description": "The state/province of the Shipping Address."
                    },
                    {
                        "value": "Zip",
                        "description": "The zip code of the Shipping Address."
                    },
                    {
                        "value": "Country",
                        "description": "The country of the Shipping Address."
                    },
                    {
                        "value": "Product Name",
                        "description": "The name of the product purchased in this line item."
                    },
                    {
                        "value": "Product SKU",
                        "description": "The SKU of the product purchased in this line item."
                    },
                    {
                        "value": "Product Price",
                        "description": "The price of the product purchased in this line item."
                    },
                    {
                        "value": "IO: Custom Note",
                        "description": "The Custom Note field from your Infinite Options option set field."
                    }
                ],
                "type": "checkboxes",
                "label": "Spreadsheet Columns",
                "required": true
            }
        ]
    },
    "config": {
        "inputs": [
            {
                "schema": 2,
                "trigger_type": "input",
                "type": "infiniteoptions",
                "entity": "order",
                "action": "created",
                "name": "Order Created",
                "key": "infinite_options_order_created",
                "metadata": [],
                "local_fields": [],
                "weight": 0
            }
        ],
        "outputs": [
            {
                "schema": 2,
                "trigger_type": "output",
                "type": "loop",
                "name": "Loop",
                "key": "loop",
                "metadata": {
                    "key": "{{infinite_options_order_created.line_items[]}}"
                },
                "local_fields": [],
                "weight": 0
            },
            {
                "schema": 4,
                "trigger_type": "output",
                "type": "googlesheets",
                "entity": "row",
                "action": "create",
                "name": "Create Row",
                "key": "googlesheets_row",
                "metadata": {
                    "path": {
                        "mode": "create",
                        "spreadsheet_id": "",
                        "sheet_name": "Sheet1",
                        "header_row": "first_row"
                    },
                    "body": {
                        "fields": {
                            "Order URL": "https://{{context.shop.domain}}/admin/orders/{{infinite_options_order_created.order.id}}",
                            "Order Name": "{{infinite_options_order_created.order.name}}",
                            "Email": "{{infinite_options_order_created.order.email}}",
                            "Shipping Name": "{{infinite_options_order_created.order.shipping_address.first_name}} {{infinite_options_order_created.order.shipping_address.last_name}}",
                            "Address": "{{infinite_options_order_created.order.shipping_address.address1}}",
                            "City": "{{infinite_options_order_created.order.shipping_address.city}}",
                            "Province": "{{infinite_options_order_created.order.shipping_address.province}}",
                            "Zip": "{{infinite_options_order_created.order.shipping_address.zip}}",
                            "Country": "{{infinite_options_order_created.order.shipping_address.country}}",
                            "Product Name": "{{loop.title}}",
                            "Product SKU": "{{loop.sku}}",
                            "Product Price": "{{loop.price}}",
                            "infinite_options_1": "{{loop.fields.infinite_options_1}}"
                        }
                    }
                },
                "local_fields": [
                    {
                        "key": "body",
                        "type": "object",
                        "fields": [
                            {
                                "key": "fields",
                                "type": "object",
                                "fields": [
                                    {
                                        "key": "Order URL",
                                        "label": "Order URL",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Order Name",
                                        "label": "Order Name",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Email",
                                        "label": "Email",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Shipping Name",
                                        "label": "Shipping Name",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Address",
                                        "label": "Address",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "City",
                                        "label": "City",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Province",
                                        "label": "Province",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Zip",
                                        "label": "Zip",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Country",
                                        "label": "Country",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Product Name",
                                        "label": "Product Name",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Product SKU",
                                        "label": "Product SKU",
                                        "type": "text",
                                        "source": ""
                                    },
                                    {
                                        "key": "Product Price",
                                        "label": "Product Price",
                                        "type": "text",
                                        "source": ""
                                    }
                                ]
                            }
                        ]
                    }
                ],
                "weight": 1
            }
        ],
        "storage": []
    }
}